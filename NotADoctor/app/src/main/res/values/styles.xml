<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/enter</item>
        <item name="android:windowExitTransition">@transition/exit</item>
        <item name="android:windowContentTransitions">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SlideTheme" parent="AppTheme">
        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@transition/enter_slide</item>
        <item name="android:windowExitTransition">@transition/exit_slide</item>
    </style>

    <style name="text_style">
         <item name="android:textStyle">bold</item>
         <item name="android:textColor">@color/question_text</item>
         <item name="android:textSize">@dimen/text_question_size</item>
    </style>
</resources>
